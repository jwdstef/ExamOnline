<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <!-- 404错误跳转 -->
    <error-page>
        <error-code>404</error-code>
        <location>/404.jsp</location>
    </error-page>

    <!-- 过滤器 -->
    <filter>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <filter-class>cc.ryanc.filter.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encode</param-name>
            <param-value>utf-8</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>AdminLoginFilter</filter-name>
        <filter-class>cc.ryanc.filter.AdminLoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AdminLoginedFilter</filter-name>
        <filter-class>cc.ryanc.filter.AdminLoginedFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>SetCharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminLoginFilter</filter-name>
        <url-pattern>/admin/page/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AdminLoginedFilter</filter-name>
        <url-pattern>/admin/index.jsp</url-pattern>
    </filter-mapping>

    <!-- servlet -->
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>cc.ryanc.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StuServlet</servlet-name>
        <servlet-class>cc.ryanc.servlet.StuServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ClassServlet</servlet-name>
        <servlet-class>cc.ryanc.servlet.ClassServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SiteServlet</servlet-name>
        <servlet-class>cc.ryanc.servlet.SiteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExamLibraryServlet</servlet-name>
        <servlet-class>cc.ryanc.servlet.ExamLibraryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExamPaperServlet</servlet-name>
        <servlet-class>cc.ryanc.servlet.ExamPaperServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ExamPaperLibsServlet</servlet-name>
        <servlet-class>cc.ryanc.servlet.ExamPaperLibsServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/AdminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StuServlet</servlet-name>
        <url-pattern>/StuServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ClassServlet</servlet-name>
        <url-pattern>/ClassServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SiteServlet</servlet-name>
        <url-pattern>/SiteServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExamLibraryServlet</servlet-name>
        <url-pattern>/ExamLibraryServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExamPaperServlet</servlet-name>
        <url-pattern>/ExamPaperServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExamPaperLibsServlet</servlet-name>
        <url-pattern>/ExamPaperLibsServlet</url-pattern>
    </servlet-mapping>
</web-app>